				WorkingDirectory="APPLICATIONROOTDIRECTORY"
	                	Icon ="shc.ico" />

		<Shortcut Id="ApplicationStartMenuShortcut" 
				Advertise="yes"
				Icon ="shc.ico"
        	        	Name="ShionCoin Console" 
		                Directory="ApplicationProgramsFolder"
